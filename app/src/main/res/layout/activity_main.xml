<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="25sp"
       android:id="@+id/setup_plan"
        android:textColor="#000000"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You can change the mode anytime in the settings"
        android:layout_below="@id/setup_plan"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/dig_rel"
        android:background="@drawable/bg_relative"
        android:padding="25dp"
        android:layout_below="@id/text_view"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SetUp Your Wizard"
            android:textSize="20sp"
            android:id="@+id/tv_1"
            android:textColor="#ffffff"
            android:layout_marginBottom="10dp"/>
        <View
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_below="@id/tv_1"
            android:background="#ffffff"
            android:layout_marginBottom="10dp"
            android:id="@+id/vi_ew"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_below="@id/vi_ew"
            android:text="RECOMMENDED"
            android:textColor="#ffffff"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pie_chart_img"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:layout_below="@id/dig_rel"
              android:padding="25dp"
              android:id="@+id/rec_tangle"
              android:background="@drawable/bg_second"
              android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start From Scratch"
            android:textSize="20sp"
            android:id="@+id/tv_2"
            android:textColor="#ffffff"
            android:layout_marginBottom="10dp"/>
        <View
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_below="@id/tv_2"
            android:background="#ffffff"
            android:layout_marginBottom="10dp"
            android:id="@+id/vi_ew1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vi_ew1"
            android:text="FROM EXPERTS"
            android:textColor="#ffffff"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/equilizer"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="25dp"
        android:layout_below="@id/rec_tangle"
        android:background="@drawable/bg_third">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SetUp Your Wizard"
            android:textSize="20sp"
            android:id="@+id/tv_3"
            android:textColor="#ffffff"
            android:layout_marginBottom="10dp"/>
        <View
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_below="@id/tv_3"
            android:background="#ffffff"
            android:layout_marginBottom="10dp"
            android:id="@+id/vi_ew2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vi_ew2"
            android:text="RECOMMENDED"
            android:textColor="#ffffff"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/note"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>


    </RelativeLayout>



    






</RelativeLayout>